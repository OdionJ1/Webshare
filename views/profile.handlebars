<section class="profile_area">
    <h4>
    <div class="row">
        <div class="col-md-4">
          <p title="Profile">Profile</p> 
        </div>
        <div class="col-md-8 text-right">
           <button data-id="{{user._id}}" title="Edit Profile" class="btn btn-default btn-sm btn-update" id="post-comment">Edit profile <i class="fa fa-pencil"></i></button>
        </div>
      </div>
      </h4>
      <div id="comment-form-area">
          <form method="post" action="" class="form-horizontal" role="form" id="profile-update">
			<div class="form-group">
				<label for="Firstname" class="col-sm-2 col-sm-offset-1 control-label">Firstname</label>
				<div class="col-sm-8 col-xs-6">
                <input type="hidden" name="_method" value="put"  />
				<input type="text" name="firstname" class="form-control" id="firstname" placeholder="Firstname">
				</div>
			</div>
            <div class="form-group">
				<label for="Surname" class="col-sm-2 col-sm-offset-1 control-label">Surname</label>
				<div class="col-sm-8 col-xs-8">
				<input type="text" name="surname" class="form-control" id="surname" placeholder="Surname">
				</div>
            </div>
            <div class="form-group">
				<label for="Edit Email" class="col-sm-2 col-sm-offset-1 control-label">New Email</label>
				<div class="col-sm-8 col-xs-8">
				<input type="text" name="email" class="form-control" id="email" placeholder="Email">
				</div>
            </div>
            <div class="form-group text-right">
            <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Update</button>
            </div>*
        </div>
      </div>
      
            
    <table class="table table-bordered table-striped table-responsive table-hovered">
        <tr>
            <th scope="row">First Name</th>
            <td title="firstname">{{user.firstname}}</td>
        </tr>
        <tr>
            <th scope="row">Surname</th>
            <td title="surname" >{{user.surname}}</td>
        </tr>
        <tr>
            <th scope="row">Email</th>
            <td title="email" >{{user.email}}</td>
        </tr>
        <tr>
            <th scope="row">Date Joined</th>
            <td title="date joined">{{timeago user.dateCreated}}</td>
        </tr>
    </table>
    <div class="row">
        <div class="col-md-12 text-right">
            <button class="btn btn-default accountDelete" id="btn-delete-account">
                Delete Account
            </button>
        </div>
    </div>

<div class="modal fade" id="accountDeleteModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">Are you sure?</h3>
      </div>
      <div class="modal-body row">
          <p class="alert alert-warning">
            This action <strong>cannot</strong> be undone. This will permanently delete this
            <strong>{{user.email}}</strong> account and all images and comments attached to it
          </p>
          <form method="post" action="" class="form-horizontal" role= "form" id="accountDeleteForm">
              <div class="form-group">
                  <div class="col-md-12">
                      <label for="user" class="control-label">Please enter your email address</label>
                      <input type="email" name="user" class="form-control" id="user" required>
                  </div>
              </div>
              <br />
              <br />
              <br />
              <br />
              <div class="form-group text-right">
                  <div class="col-md-12">
                      <button type="submit" class="btn btn-default btn-block accountDelete" 
                      id="btn-account-delete-yes" disabled="disabled">
                          I understand the consequences, Delete this Account
                      </button>
                  </div>
              </div>
          </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</section>